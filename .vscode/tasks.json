{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cra start",
      "type": "shell",
      "command": "pm2",
      "args": ["--name", "modern-board-cra", "start", "npm", "--", "start"],
      "options": {
        "cwd": "${workspaceFolder}/webapp"
      }
    },
    {
      "label": "cra kill",
      "type": "shell",
      "command": "pm2",
      "args": ["kill", "--name", "modern-board-cra"],
      "options": {
        "cwd": "${workspaceFolder}/webapp"
      }
    },
    {
      "label": "mysql dev server start",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d"],
      "options": {
        "cwd": "${workspaceFolder}/server/docker"
      }
    },
    {
      "label": "mysql dev server stop",
      "type": "shell",
      "command": "docker-compose",
      "args": ["stop"],
      "options": {
        "cwd": "${workspaceFolder}/server/docker"
      }
    }
  ]
}
